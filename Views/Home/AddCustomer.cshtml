@model EntityLayer.concrete.VievModel
@{
    ViewBag.Title = "AddCustomer";
}
<!doctype html>
<html lang="en">
<head>
    <title>Customer Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/admin panel/login-form-19/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">
                        Register to place an order
                    </h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url('../../Images/User.png'); "></div>
                        <h3 class="text-center mb-0">Welcome</h3>
                        <p class="text-center">                           </p>

                        <form class="form-group" method="post">
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" placeholder="Your Name" name="Name" class="form-control" required />
                            </div>

                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" placeholder="Your Email" name="Email" class="form-control" required />
                                <span>
                                    @ViewBag.X
                                </span>

                            </div>

                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" placeholder="Address" name="AddressLine" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" placeholder="City" name="City" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" placeholder="Country" name="Country" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" placeholder="City Code" name="CityCode" class="form-control" required />
                            </div>
                            <div class="form-group">

                                <button class="btn form-control btn-primary rounded submit px-3">Register</button>
                            </div>
                        </form>

                        <div class="w-100 text-center mt-4 text">
                            <a href="@Url.Action("Index", "Home")">Main Menu</a>
                            <br />
                            <a href="~/Home/LoginCustomer/">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/admin panel/login-form-19/js/jquery.min.js"></script>
    <script src="~/admin panel/login-form-19/js/popper.js"></script>
    <script src="~/admin panel/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/admin panel/login-form-19/js/main.js"></script>

</body>
</html>

