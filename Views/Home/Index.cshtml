@using EntityLayer.concrete
@model List<Product>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css" />
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">

    <section class="Home">

        <div class="max-width">
            <div class="home-content">
                <div class="texthome1">Hello</div>
                <div class="texthome2">YOU CAN DESIGN YOUR WEBSITE</div>
                <div class="texthome3">BY CHOOSING ANY DESIGNER ON THIS WEBSITE</div>
            </div>
        </div>

    </section>

    <section class="content-header">
        <h1 class="Header-web">Choose your web designer</h1>
    </section>
    <section class="content">

        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    Web Programer
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b>@item.Name</b></h2>
                                            <p class="text-muted text-sm"><b>About: </b> Web Designer</p>

                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="@item.ImageUrl" alt="" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="~/Home/AddCustomer/@item.Id" class="btn btn-info">
                                            <i class="fas fa-user"></i> Price Offer And Give Order
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>
</html>